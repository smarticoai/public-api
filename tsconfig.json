{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "typedocOptions": {
        "name": "Smartico API documentation",
        "entryPoints": ["src/WSAPI/WSAPI.ts", "src/WSAPI/WSAPITypes.ts"],
        "out": "docs",
        "plugin": ["typedoc-plugin-markdown", "typedoc-plugin-merge-modules"],
        "entryDocument": "API_DOC.md",
        "disableSources": true,
        "excludePrivate": true,
        "readme": "none"
    }
  }
  